{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
