---
interface Props {
  className?: string;
  variant?: "default" | "big";
}

const { className, variant } = Astro.props;

import { cn } from "../../../lib/utils";
---

<h1
  class={cn(
    "font-medium text-center",
    variant === "big"
      ? "text-4xl md:text-5xl max-w-4xl"
      : "text-2xl md:text-3xl max-w-3xl",
    className
  )}
>
  <slot />
</h1>
