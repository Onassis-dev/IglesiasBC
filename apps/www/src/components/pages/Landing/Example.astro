---
interface Props {
    img: string;
    link: string;
}

const { img, link } = Astro.props;
---

<a href={link} class="border rounded-lg" target="_blank">
    <div class="h-7 bg-zinc-800 flex justify-start items-center space-x-1.5 px-3 rounded-t-lg">
        <span class="w-2 h-2 rounded-full bg-red-400"></span>
        <span class="w-2 h-2 rounded-full bg-yellow-400"></span>
        <span class="w-2 h-2 rounded-full bg-green-400"></span>
    </div>
    <img src={img} alt="" class="w-full aspect-video rounded-b-lg" />
</a>
