---
interface Props {
    title: string;
    text: string;
    accentWord: string;
    color: string;
}

const { title, text, accentWord, color } = Astro.props;

const accentIndex = title.indexOf(accentWord);
const firstPart = title.substring(0, accentIndex);
const secondPart = title.substring(accentIndex + accentWord.length);
---

<div id={title} class="flex max-w-6xl w-full py-4 mx-auto items-start rounded-lg flex-col p-2">
    <div class={`text-${color} ml-0.5 rounded-lg`}>
        <slot />
    </div>
    <div class="flex max-w-2xl lg:max-w-md flex-col">
        <h2 class="text-2xl font-semibold my-3">{firstPart}<span>{accentWord}</span> {secondPart}</h2>
        <p class="text-muted-foreground">{text}</p>
    </div>
</div>
