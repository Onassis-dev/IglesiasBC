---
interface Props {
    pastors?: string;
    pastorsImg?: string;
}

const { pastors, pastorsImg } = Astro.props;
---

<section class="">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
        <div class="max-w-screen-lg sm:text-lg">
            <div class="shadow-md overflow-hidden max-w-lg w-full shadow-cshadow border-border">
                <img src={pastorsImg} alt="" class="rounded-bradius w-full object-cover" />
                <div class="p-6">
                    <h2 class="text-2xl font-bold mb-2">{pastors}</h2>
                </div>
            </div>
        </div>
    </div>
</section>
