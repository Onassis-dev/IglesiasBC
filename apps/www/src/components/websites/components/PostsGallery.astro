---
import type { Website } from "@/components/pages/Website/website.types";
import Section1 from "../basics/Section1.astro";
import "@/components/websites/styles/calendar.css";

interface Props {
    animations: number;
    pageTitle: string;
    language: Website["language"];
    posts: any[];
}

const { posts, pageTitle, animations, language } = Astro.props;
---

<Section1 animations={animations}>
    <div class="flex flex-col">
        <h1 class="font-header text-5xl mb-16 w-full">
            {language === "es" ? "Blog" : "Our posts"}
        </h1>

        <div class="gap-8 grid sm:grid-cols-2">
            {
                posts.map((post) => (
                    <a href={`/${pageTitle}/blog/${post.title}`}>
                        <img class="border aspect-video bg-cover object-cover rounded-lg" src={post.img} alt="" />
                        <h3 class="font-semibold text-xl mt-2">{post.title}</h3>
                        <p class="text-muted-foreground text-sm mt-1">{post.description}</p>
                    </a>
                ))
            }
        </div>
    </div>
</Section1>
