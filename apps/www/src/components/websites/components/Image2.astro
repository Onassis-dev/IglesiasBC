---
import type { Image } from "@/components/pages/Website/website.types";
interface Props {
    image: Image;
    className?: string;
}

const { image, className } = Astro.props;
---

<style>
    .image {
        transition: all 1s ease;
        flex: 1;
    }
    .image:hover {
        flex: 9;
    }

    @media (max-width: 768px) {
        .image:hover {
        flex: 15;
    }
    }
</style>

<img class={"image " + className} src={image.img} alt="" />
