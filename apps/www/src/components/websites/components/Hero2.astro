---
import type { Website } from "@/components/pages/Website/website.types";
import AButton from "../basics/AButton.astro";
interface Props {
  webpage: Website;
}

const { webpage } = Astro.props;
---

<div class="relative bg-gradient-to-r h-[80lvh] text-white overflow-hidden">
  <div class="fixed inset-0 -z-10">
    <img
      src={webpage.coverImg}
      alt="Background Image"
      class="object-cover object-center w-full h-full"
    />
    <div class="absolute inset-0 bg-black opacity-50"></div>
  </div>

  <div
    class="relative z-10 flex flex-col justify-center items-center h-full text-center gap-8"
  >
    <h1 class="text-5xl md:text-6xl leading-tight font-header max-w-3xl">
      {webpage.title}
    </h1>
    <p class="text-md md:text-xl max-w-2xl">{webpage.description}</p>
    <div class="flex flex-wrap gap-2 xs:gap-5 justify-center">
      <AButton href="#about"
        >{webpage.language === "es" ? "Sobre nosotros" : "About us"}</AButton
      >
      {
        webpage.preachLink && (
          <AButton href={webpage.preachLink} variant="outside2">
            {webpage.language === "es" ? "Predica" : "Preach"}
          </AButton>
        )
      }
    </div>
  </div>
</div>
