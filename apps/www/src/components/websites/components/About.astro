---
import type { Website } from "@/components/pages/Website/website.types";
import H2 from "../basics/H2.astro";
import Section1 from "../basics/Section1.astro";

interface Props {
  about?: string;
  pastors?: string;
  pastorsImg?: string;
  animations: number;
  language: Website["language"];
}

const { about, animations, pastors, pastorsImg, language } = Astro.props;
---

<Section1 animations={animations}>
  <div
    id="about"
    class="scrollable w-full gap-12 grid grid-cols-1 md:grid-cols-2 items-center"
  >
    <div class="sm:text-lg max-w-xl md:max-w-full space-y-6">
      <H2>{language === "es" ? "¿Quiénes somos?" : "Who are we?"}</H2>
      <p>{about}</p>
    </div>

    <div class="ml-auto">
      <img
        src={pastorsImg}
        alt="Imagen de los pastores"
        class="w-full aspect-square object-cover rounded-md max-w-64"
      />
      <p class="text-md font-header">{pastors}</p>
    </div>
  </div>
</Section1>
