---
import type { Event } from "@/components/pages/Website/website.types";

interface Props {
    event: Event;
}

const { event } = Astro.props;
---

<div class="flex flex-col justify-center items-center bg-gray-100 min-h-screen">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden max-w-lg w-full">
        <img src={event.img} alt="Mountain" class="w-full h-64 object-cover" />
        <div class="p-6">
            <span class="text-gray-600">{event.date}</span>
            <h2 class="text-2xl font-bold text-gray-800 mb-2">{event.title}</h2>
            <div class="flex justify-between items-center"></div>
        </div>
    </div>
</div>
