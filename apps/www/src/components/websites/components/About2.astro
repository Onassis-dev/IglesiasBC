---
import H2 from "../basics/H2.astro";
import Section2 from "../basics/Section2.astro";

interface Props {
    about?: string;
    pastors?: string;
    pastorsImg?: string;
    animations: number;
}

const { about, pastors, pastorsImg, animations } = Astro.props;
---

<Section2 animations={animations}>
    <div id="about" class="scrollable w-full lg:py-16 flex my-10 flex-col md:flex-row items-center justify-between gap-10">
        <div class="sm:text-lg max-w-xl">
            <H2>¿Quiénes somos?</H2>
            <p class="mb-4">{about}</p>
        </div>

        <div class="w-full max-w-96 rounded-md shadow-md shadow-cshadow border-border overflow-hidden">
            <img src={pastorsImg} alt="" class="w-full aspect-square object-cover" />
            <div class="p-4">
                <h2 class="text-2xl font-header">{pastors}</h2>
            </div>
        </div>
    </div>
</Section2>
