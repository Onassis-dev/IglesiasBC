---
import type { Activity } from "@/components/pages/Website/website.types";
import { ClockIcon } from "lucide-react";

interface Props {
  activity: Activity;
}

const { activity } = Astro.props;
---

<div class="w-full sm:w-[calc(50%-0.8rem)] xl:w-[calc(33.333%-0.8rem)]">
  <div class="flex flex-col h-full border rounded-xl overflow-hidden shadow-sm">
    <img
      class="w-full aspect-video object-cover"
      loading="lazy"
      src={activity.img}
      alt={activity.title}
    />

    <div class="flex flex-col p-4 flex-grow">
      <h3 class="text-xl font-header mb-2">{activity.title}</h3>
      <p class="text-gray-600 text-sm">{activity.text}</p>
      {
        activity.date && (
          <p class="text-sm flex items-center gap-1.5 mt-2">
            <ClockIcon className="size-4 text-primary" />
            {activity.date}
          </p>
        )
      }
    </div>
  </div>
</div>
