---
import type { Activity } from "@/components/pages/Website/website.types";

interface Props {
  activity: Activity;
  animations: number;
}

const { activity, animations } = Astro.props;
---

<div class=`flex border items-center rounded-lg flex-col w-full sm:flex-row`>
  <img
    class="sm:w-1/3 w-full aspect-[4/3] object-cover rounded-lg"
    loading="lazy"
    src={activity.img}
  />

  <div class="flex flex-col p-4">
    <h3 class="text-xl font-header">{activity.title}</h3>
    <p class="sm:text-md">{activity.text}</p>
  </div>
</div>
