---
import type { Activity, Website } from "@/components/pages/Website/website.types";
import Activity1 from "./Activity1.astro";
interface Props {
    activities?: Activity[];
    animations: number;
    language: Website["language"];
}

const { activities, animations, language } = Astro.props;
---

<h2 class={"text-3xl font-header text-center mt-10 mb-5 animatedscroll" + animations}>{language === "es" ? "Nuestras actividades:" : "Our activities:"}</h2>

<div>
    {activities?.map((activity, i) => <Activity1 animations={animations} activity={activity} flip={i % 2 === 1} />)}
</div>
