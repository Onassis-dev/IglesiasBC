---
import Layout from "../layouts/IndexLayout.astro";
import { Button } from "@/components/ui/button";
import Pricing from "@/components/pages/Pricing/Pricing";
---

<Layout title="Precios">
  <h1
    class="mb-10 text-center w-[95%] mx-auto text-5xl font-medium mt-8 max-w-3xl"
  >
    Elige tu plan y únete a esta comunidad!
  </h1>
  <Pricing client:load />

  <section class="mx-auto px-5 rounded-lg mt-12">
    <div
      class="flex flex-col justify-center max-w-6xl w-full px-5 mx-auto gap-10 py-10 items-center"
    >
      <h2 class="text-5xl md:text-6xl font-medium text-center">
        ¿Tienes más dudas?
      </h2>
      <a href="https://wa.me/526642956883"
        ><Button
          className="hover:-translate-y-0.5 transition-transform text-md font-bold shadow-md"
          >Contáctanos</Button
        ></a
      >
    </div>
  </section>
</Layout>
