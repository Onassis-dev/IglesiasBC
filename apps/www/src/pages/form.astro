---
import MemberForm from "@/components/pages/Form/MemberForm.tsx";
import ExpiredAlert from "@/components/pages/Form/ExpiredAlert.tsx";
import { Card } from "@/components/ui/card";
import Layout from "@/layouts/FuncLayout.astro";
---

<Layout title="Formulario de registro">
  <section class="max-w-xl w-full mx-auto flex flex-col gap-4 mb-12 px-2">
    <Card className="mt-5 sm:mt-10 p-4">
      <h1 class="text-2xl font-semibold">Formulario de registro</h1>
      <p class="text-sm text-muted-foreground">
        Por favor, completa el formulario para registrarte en nuestra iglesia.
      </p>
    </Card>

    <MemberForm client:load />
  </section>
</Layout>

<ExpiredAlert client:only />
